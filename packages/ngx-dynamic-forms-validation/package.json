{
  "name": "@moe1399/ngx-dynamic-forms-validation",
  "version": "0.12.0",
  "description": "Server-side form validation library compatible with @moe1399/ngx-dynamic-forms",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs && npm run build:schema",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:schema": "ts-json-schema-generator --path src/types.ts --type FormConfig --tsconfig tsconfig.esm.json -o dist/form-config.schema.json",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "form",
    "validation",
    "ngx-dynamic-forms",
    "server-side",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^22.0.0",
    "ts-json-schema-generator": "^2.4.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
